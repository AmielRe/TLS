<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_margin"
    android:orientation="horizontal"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/custom_room_spinner_row__gender_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Header"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/custom_room_spinner_row_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:layout_toEndOf="@id/custom_room_spinner_row__gender_type"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/custom_room_spinner_row_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Capacity"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</RelativeLayout>